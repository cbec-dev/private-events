<%if !@user.events.any? and !@user.upcoming_events.any? and !@user.previous_events.any? %>
    <div class="cover-container d-flex text-center d-flex align-items-center p-5 mx-auto flex-column">
    <main class="inner-cover">
        <h1 class="cover-heading">Bienvenido <%= @user.name%>.</h1>
        <p class="lead">Aún no tienes eventos, ¡intenta crear o asistir a algunos!</p>
    </main>
    </div>
<%else%>
    <h1>Bienvenido <%= @user.name%></h1>
    <div class="row">
        <% if @user.events.any?%>
            <div class="col-md">
                <h3>Tus eventos</h3>
                <%= render 'shared/events_feed', events: @user.events %>
            </div>
        <% end %>
        <% if @user.upcoming_events.any?%>
            <div class="col-md">
                <h3>Eventos por asistir</h3>
                <%= render 'shared/events_feed', events: @user.upcoming_events %>
            </div>
        <% end %>
        <% if @user.previous_events.any? %>
            <div class="col-md">
                <h3>Eventos pasados</h3>
                <%= render 'shared/events_feed', events: @user.previous_events %>
            </div>
        <% end %>
    </div>
<% end %>